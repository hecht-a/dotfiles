# Focus spaces 
ctrl - left : yabai -m space --focus prev
ctrl - right : yabai -m space --focus next
alt - 0x21 : yabai -m space --focus prev
alt - 0x1E : yabai -m space --focus next

# Resize window
hyper - up: yabai -m window --resize left:20:0 || yabai -m window --resize right:20:0
hyper - down: yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0

# Reorganize windows
alt - r : yabai -m space --rotate 90

# Move window
hyper - left : yabai -m window --space prev && yabai -m space --focus prev # alt - (
hyper - right : yabai -m window --space next && yabai -m space --focus next # alt - )

# Focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north 
alt - l : yabai -m window --focus east
alt - f : yabai -m window --toggle zoom-fullscreen

# Apps shortcut
# hyper - t : open "/Applications/kitty.app"
# hyper - f : open "/Applications/firefox.app"
# hyper - d : open "/Applications/discord.app"
# hyper - e : open "/Applications/Microsoft Edge.app"
